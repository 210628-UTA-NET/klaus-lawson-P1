@model SAWebUI.Models.ProductVM;

<div class="g-3" style="margin:15%; margin-top:5%;">
    <h1 class="display-4 border-bottom">Edit Product</h1>
    <form class="row g-3" asp-action="EditProduct" method="post">
        <input asp-for="Id" hidden />
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="col-md-3">
            <label asp-for="ProductName" class="form-label"></label>
            <input asp-for="ProductName" type="text" class="form-control">
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="col-md-9">
            <label asp-for="ProductDescription" class="form-label"></label>
            <textarea asp-for="ProductDescription" type="text" id="exampleFormControlTextarea1" cols="10" rows="5" class="form-control"></textarea>
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="ProductUnitPrice" class="form-label"></label>
            <input asp-for="ProductUnitPrice" type="number" step="0.01" class="form-control">
            <span asp-validation-for="ProductUnitPrice" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="ProductAvailableQty" class="form-label"></label>
            <input asp-for="ProductAvailableQty" type="number" class="form-control">
            <span asp-validation-for="ProductAvailableQty" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="StoreId" class="form-label"></label>
            <select asp-for="StoreId" asp-items="ViewBag.Stores"  class="form-select">
            </select>
            <span asp-validation-for="StoreId" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="CategoryId" class="form-label"></label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories"  class="form-select">
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class=" offset-2 row" style="margin:5%">
            <div class="col-5">
                <input type="submit" class="btn btn-success w-100" value="Edit">
            </div>
            <div class="col-5 ">
                <a asp-action="ProductManagement" class="btn btn-secondary w-100">Back</a>
            </div>
        </div>
    </form>
    @section Scripts{
        @{  <partial name="_ValidationScriptsPartial" />  }
    }
</div>