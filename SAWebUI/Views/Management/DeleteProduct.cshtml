@model SAWebUI.Models.ProductVM;

<div class="g-3" style="margin:15%; margin-top:5%;">
    <h1 class="display-4 border-bottom">delete Product</h1>
    <form class="row g-3" asp-action="DeleteProductPost" method="post">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-3">
            <label asp-for="ProductName" class="form-label"></label>
            <input asp-for="ProductName"  disabled type="text" class="form-control">
        </div>
        <div class="col-md-9">
            <label asp-for="ProductDescription" class="form-label"></label>
            <textarea asp-for="ProductDescription" disabled type="text" id="exampleFormControlTextarea1" cols="10" rows="5" class="form-control"></textarea>
        </div>
        <div class="col-md-3">
            <label asp-for="ProductUnitPrice" class="form-label"></label>
            <input asp-for="ProductUnitPrice" disabled type="number" step="0.01" class="form-control">
        </div>
        <div class="col-md-3">
            <label asp-for="ProductAvailableQty" class="form-label"></label>
            <input asp-for="ProductAvailableQty" disabled type="number" class="form-control">
        </div>
        <div class="col-md-3">
            <label asp-for="StoreId" class="form-label"></label>
            <select asp-for="StoreId" asp-items="ViewBag.Stores" id="inputState" class="form-select">
                <option selected>Choose the Store</option>
            </select>
        </div>
        <div class="col-md-3">
            <label asp-for="CategoryId" class="form-label"></label>
            <select asp-for="CategoryId" disabled asp-items="ViewBag.Categories" id="inputState" class="form-select">
                <option selected>Choose Category</option>
            </select>
        </div>
        <div class=" offset-2 row" style="margin:5%">
            <div class="col-5">
                <input type="submit" class="btn btn-danger w-100" value="Delete">
            </div>
            <div class="col-5 ">
                <a asp-action="ProductManagement" class="btn btn-secondary w-100">Back</a>
            </div>
        </div>
    </form>
</div>