@model IEnumerable<SAWebUI.Models.OrderVM>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="display-4">Orders History</h2>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Order Id</th>
                    <th scope="col">Location</th>
                    <th scope="col">@Html.ActionLink("Total Price", "MyOrders", new { p_sortBy = ViewBag.SortCost })</th>
                    <th scope="col">@Html.ActionLink("Date", "MyOrders", new { p_sortBy = ViewBag.SortDate })</th>
                    <th scope="col">Status</th>
                    <th scope="col">Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    //string location = $"{ item.OrderStore.StoreAddress.Street} , { item.OrderStore.StoreAddress.City} , {item.OrderStore.StoreAddress.State} , {item.OrderStore.StoreAddress.Country}";
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.OrderStore.StoreName)</td>
                        <td>$ @Html.DisplayFor(modelItem => item.OrderTotalPrice)</td>
                        <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.OrderStatus)</td>
                        <td style="width:15%">
                            @Html.ActionLink("View", "ViewMyOrder", "OurStore", new { p_orderId = item.Id }, new { @style = "color:white; margin:10px", @class = "btn btn-success" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h6 class="display-4">No Order</h6>
    }

</div>