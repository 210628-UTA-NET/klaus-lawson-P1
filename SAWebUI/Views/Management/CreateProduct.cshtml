@model SAWebUI.Models.ProductVM;

<div class="g-3" style="margin:15%; margin-top:5%;">
    <h1 class="display-4 border-bottom">Create Product page</h1>
    <form class="row g-3" asp-action="CreateProduct">
        <div class="col-md-3">
            <label asp-for="ProductName" class="form-label">Product Name</label>
            <input asp-for="ProductName" type="text" class="form-control">
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="col-md-9">
            <label asp-for="ProductDescription" class="form-label">Product Description</label>
            <textarea asp-for="ProductDescription" type="text" id="exampleFormControlTextarea1" cols="10" rows="5" class="form-control"></textarea>
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="ProductUnitPrice" class="form-label">Unit Price</label>
            <input asp-for="ProductUnitPrice" type="number" step="0.01" class="form-control">
            <span asp-validation-for="ProductUnitPrice" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="ProductAvailableQty" class="form-label">Quantity</label>
            <input asp-for="ProductAvailableQty" type="number" class="form-control">
            <span asp-validation-for="ProductAvailableQty" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="StoreId" class="form-label">Store</label>
            <select asp-for="StoreId" asp-items="ViewBag.Stores" id="inputState" class="form-select">
                <option selected>Choose the Store</option>
            </select>
            <span asp-validation-for="StoreId" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="CategoryId" class="form-label">Store</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" id="inputState" class="form-select">
                <option selected>Choose Category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>


        <div class="col-lg-5">
            <button type="submit" class="btn btn-success  col align-content-lg-start">Create</button>
        </div>
        <div class="col-lg-5">
            <button asp-action="InventoryManagement" class="btn btn-secondary col align-content-lg-end">Back</button>
        </div>

    </form>
    
</div>