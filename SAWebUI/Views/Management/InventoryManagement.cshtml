@model IEnumerable<SAWebUI.Models.ProductVM>


<h1>Inventory Management</h1>
<div class="text-center">
    <div class="row">
        <h5 class="display-4 col-9 text-sm-left">List Of Our Products</h5>
        <form class="d-flex col-3">
            <select class="selectpicker" name="hi">
                <option>Mustard</option>
                <option>Ketchup</option>
                <option>Barbecue</option>
            </select>
        </form>
    </div>
    

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Product Id</th>
                <th scope="col">Product Name</th>
                <th scope="col">Unit Price</th>
                <th scope="col">Description</th>
                <th scope="col">Quantity Available</th>
                <th scope="col">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductUnitPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductDescription)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductAvailableQty)</td>
                    <td>
                        @Html.ActionLink("Edit", "", "OurStore", new { p_Storeid = item.Id }, new { @style = "color:white", @class = "btn btn-success" })
                        @Html.ActionLink("Delete", "", "OurStore", new { p_Storeid = item.Id }, new { @style = "color:white", @class = "btn btn-danger" })
                        @Html.ActionLink("View", "ViewStoreProducts", "OurStore", new { p_Storeid = item.Id }, new { @style = "color:white", @class = "btn btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a type="button" class="btn btn-primary" asp-action="CreateProduct" style="margin-bottom:10px">Add New Product</a>
</div>