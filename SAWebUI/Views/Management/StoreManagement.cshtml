@model IEnumerable<SAWebUI.Models.StoreVM>


<h1>Store Management</h1>
<div class="text-center">
    <h2 class="display-4">List Of Our Stores</h2>
    <a type="button" class="btn btn-primary" asp-action="createStore" style="margin-bottom:10px">Add New Store</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Store Id</th>
                <th scope="col">Store Name</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string address = $"{ item.addressVM.Street} , { item.addressVM.City} , {item.addressVM.State} , {item.addressVM.Country}";
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.StoreName)</td>
                    <td>@Html.DisplayFor(modelItem => item.StorePhone)</td>
                    <td>@Html.DisplayFor(modelItem => address)</td>
                    <td>
                        @Html.ActionLink("Edit", "", "OurStore", new { p_Storeid = item.Id }, new { @style = "color:white", @class = "btn btn-success" })
                        @Html.ActionLink("Delete", "", "OurStore", new { p_Storeid = item.Id }, new { @style = "color:white", @class = "btn btn-danger" })
                        @Html.ActionLink("View", "ViewStoreProducts", "OurStore", new { p_Storeid = item.Id }, new { @style = "color:white", @class = "btn btn-info" })
                    </td>
                    <td>
                      
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>