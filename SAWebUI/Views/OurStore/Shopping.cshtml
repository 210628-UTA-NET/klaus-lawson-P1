</div>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3">
                <div class="card" style="width: 15rem;">
                    <img style="min-height:100px;width:100px" src="~/images/pen.png">
                    <div class="card-body">
                        <p class="card-text"><h5>Product: @item.ProductName</h5> </p>
                        <p class="card-text"><h5>Price: @item.ProductUnitPrice</h5></p>
                            <span class="btn btn-warning">
                                @Html.ActionLink("", "AddToCart", new { p_id = @item.Id }, new { @class = "fas fa-cart-plus" })
                            </span>
                        
                    </div>
                </div>
            </div>
        }
    </div>
</div>

