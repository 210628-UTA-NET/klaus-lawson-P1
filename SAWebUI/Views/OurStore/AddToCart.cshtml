@model SAWebUI.Models.ProductVM
@{
    ViewBag.Title = "AddToCart";
}
<br />
<br />
<br />
<div>
    @using (@Html.BeginForm())
    {<div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <img style="min-height:200px; width:200px;" src="~/images/prd.png" />
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8">
                    <h2>Product Name: @Model.ProductName</h2>
                    <h4>Price:$ @Model.ProductUnitPrice </h4>
                    Description: <em>@Model.ProductDescription</em><br /><br /><br />
                    <input type="number" name="qty" value="0" id="qty1" min="1" max="10" />
                    <input type="submit" value="Submit" class="btn btn-danger" />
                </div>
            </div>
        </div>

    }
</div>