
@{
    @model IEnumerable<SAWebUI.Models.StoreVM>
}
<div class="text-center ">
    <h1 class="display-4 text-left">List Of Our stores</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Store Name</th>
                <th scope="col">Store Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Operation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string address = $"{ item.Street} , { item.City} , {item.State} , {item.Country}";
                    
                
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.StoreName)</td>
                <td>@Html.DisplayFor(modelItem => item.StorePhone)</td>
                <td>@Html.DisplayFor(modelItem => address)</td>
                <td>
                    @Html.ActionLink("View","ViewStore", "OurStore", new { p_id = item.Id }, new { @style = "color:white", @class = "btn btn-info" })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
